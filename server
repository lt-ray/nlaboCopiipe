local remote = game:GetService("StarterPack"):WaitForChild("TeleportTool"):WaitForChild("TeleportEvent")

remote.OnServerEvent:Connect(function(player, targetPosition)
    local character = player.Character
    if not character then return end

    local humanoidRootPart = character:FindFirstChild("HumanoidRootPart")
    if humanoidRootPart then
        humanoidRootPart.CFrame = CFrame.new(targetPosition + Vector3.new(0, 3, 0)) -- 少し上にワープ
    end
end)
