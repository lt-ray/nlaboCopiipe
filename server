workspace.ChildAdded:Connect(function(child)
    if child.Name == "TeleportBall" and child:IsA("Part") then
        child.Touched:Connect(function(hit)
            local hitPlayer = game.Players:GetPlayerFromCharacter(hit.Parent)
            local creatorValue = child:FindFirstChild("Creator")

            if hitPlayer and creatorValue and creatorValue.Value then
                local creatorPlayer = creatorValue.Value
                local creatorChar = creatorPlayer.Character
                local targetChar = hitPlayer.Character

                if creatorChar and targetChar then
                    local creatorRoot = creatorChar:FindFirstChild("HumanoidRootPart")
                    local targetRoot = targetChar:FindFirstChild("HumanoidRootPart")

                    if creatorRoot and targetRoot then
                        targetRoot.CFrame = creatorRoot.CFrame
                    end
                end
                child:Destroy()
            end
        end)
    end
end)
